<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
<!--        <item name="colorPrimary">@color/colorPrimary</item>-->
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>


        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Widget.MaterialDrawerStyle" parent="MaterialDrawerTheme">
        <item name="materialDrawerInsetForeground">#4000</item>
        <!-- MaterialDrawer specific values -->
        <item name="materialDrawerBackground">?colorSurface</item>
        <item name="materialDrawerPrimaryText">@color/md_black_1000</item>
        <item name="materialDrawerPrimaryIcon">@color/md_black_1000</item>
        <item name="materialDrawerSecondaryText">@color/md_black_1000</item>
        <item name="materialDrawerSecondaryIcon">@color/md_black_1000</item>
        <item name="materialDrawerDividerColor">@color/md_black_1000</item>
        <item name="materialDrawerSelectedBackgroundColor">@color/primary</item>
    </style>

    <style name="Widget.MaterialDrawerHeaderStyle" parent="">
        <item name="materialDrawerCompactStyle">false</item>
        <item name="materialDrawerHeaderSelectionText">@color/primary_dark</item>
        <item name="materialDrawerHeaderSelectionSubtext">@color/primary_dark</item>
    </style>

    <style name="spinner_style">
<!--        <item name="android:background">@drawable/spinner_new_bg</item>-->
        <!--<item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:popupBackground">@color/white</item>-->
    </style>


    <!-- BezelImageView -->
    <style name="BezelImageView">
        <item name="materialDrawerMaskDrawable">@drawable/dark_circle</item>
        <item name="materialDrawerDrawCircularShadow">true</item>
        <item name="materialDrawerSelectorOnPress">@color/primary_dark</item>
        <item name="android:scaleType">centerInside</item>
    </style>


    <style name="CustomShapeAppearance">
        <item name="neumorph_cornerSize">8dp</item>
    </style>



</resources>
