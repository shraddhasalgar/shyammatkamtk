<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/boss_bg"

    tools:context=".starline_timings">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/black"
            android:background="@drawable/grad_button"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/back"
                    app:tint="@color/md_white_1000" />

                <com.playboss.satkamatka.latobold
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/md_white_1000"
                    android:textSize="16sp" />


            </LinearLayout>

        </RelativeLayout>

        <com.playboss.satkamatka.latobold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Win Ratio"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            />

        <com.playboss.satkamatka.latonormal
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/md_white_1000"
            android:id="@+id/rate"
            android:layout_marginRight="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#730800"
                app:cardCornerRadius="5dp"
                >

                <com.playboss.satkamatka.latonormal
                    android:id="@+id/bid_history"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="BID\nHISTORY"
                    android:textSize="12dp"
                    android:textColor="@color/md_white_1000" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#730800"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="5dp"
                >

                <com.playboss.satkamatka.latonormal
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RESULT\nHISTORY"
                    android:textColor="@color/md_white_1000"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:id="@+id/result_history"
                    />


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#730800"
                app:cardCornerRadius="5dp"
                >

                <com.playboss.satkamatka.latonormal
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RESULT\nCHART"
                    android:textColor="@color/md_white_1000"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:id="@+id/chart"
                    />


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_marginLeft="10dp"

            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/result_history_pop"
        android:visibility="gone"
        android:layout_height="match_parent">



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/primary"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:padding="15dp"
                android:background="@color/black"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/back"
                    app:tint="@color/md_white_1000"
                    android:id="@+id/back2"
                    />

                <com.playboss.satkamatka.latobold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_white_1000"
                    android:layout_marginLeft="20dp"
                    android:text="Result History"
                    android:textSize="16sp"
                    />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp" />
    </LinearLayout>


</RelativeLayout>