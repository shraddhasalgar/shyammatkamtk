<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/boss_bg"
    tools:context=".profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:background="@drawable/grad_button">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:src="@drawable/back"
                    app:tint="@color/md_white_1000" />


                <com.playboss.satkamatka.latobold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="My Profile"
                    android:textColor="@color/md_white_1000"
                    android:textSize="14sp" />


            </LinearLayout>


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                >


                <com.playboss.satkamatka.latobold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage profile"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                     android:textSize="14sp"
                    />


                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rectangle_3_shape"
                    android:backgroundTint="#31FFFFFF"
                    android:drawableTint="@color/black"
                    android:hint="Name"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="#AAFFFFFF"
                    android:textSize="13sp"
                    app:drawableEndCompat="@drawable/ic_person"
                    tools:ignore="TouchTargetSizeCheck" />


                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rectangle_3_shape"
                    android:backgroundTint="#31FFFFFF"
                    android:drawableTint="@color/black"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="#AAFFFFFF"
                    android:textSize="13sp"
                    app:drawableEndCompat="@drawable/ic_email"
                    tools:ignore="TouchTargetSizeCheck" />


                <EditText
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rectangle_3_shape"
                    android:backgroundTint="#31FFFFFF"
                    android:clickable="false"
                    android:drawableTint="@color/black"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="Mobile number"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="#AAFFFFFF"
                    android:textSize="13sp"

                    app:drawableEndCompat="@drawable/ic_baseline_mobile_friendly_24"
                    tools:ignore="TouchTargetSizeCheck" />

                <com.playboss.satkamatka.latobold
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#730800"
                    android:gravity="center_horizontal"
                    android:paddingLeft="30dp"
                    android:paddingTop="10dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="10dp"
                    android:text="LOGIN"
                    android:textColor="@color/md_white_1000"
                    android:textSize="12sp" />




                <com.playboss.satkamatka.latobold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/white"
                     android:textSize="14sp"
                    />


                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rectangle_3_shape"
                    android:backgroundTint="#31FFFFFF"
                    android:drawableTint="@color/black"
                    android:hint="New Password"
                    android:inputType="textPassword"
                    android:maxLength="12"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="#AAFFFFFF"
                    android:textSize="13sp"
                    app:drawableEndCompat="@drawable/ic_password"
                    tools:ignore="TouchTargetSizeCheck" />


                <EditText
                    android:id="@+id/confirm"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rectangle_3_shape"
                    android:backgroundTint="#31FFFFFF"
                    android:drawableTint="@color/black"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:maxLength="12"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="#AAFFFFFF"
                    android:textSize="13sp"
                    app:drawableEndCompat="@drawable/ic_password"
                    tools:ignore="TouchTargetSizeCheck" />


                <com.playboss.satkamatka.latobold

                    android:id="@+id/submit2"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#730800"
                    android:gravity="center_horizontal"
                    android:paddingLeft="30dp"
                    android:paddingTop="10dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="10dp"
                    android:text="UPDATE"
                    android:textColor="@color/md_white_1000"
                    android:textSize="12sp" />

            </LinearLayout>

        </ScrollView>



    </RelativeLayout>



</RelativeLayout>