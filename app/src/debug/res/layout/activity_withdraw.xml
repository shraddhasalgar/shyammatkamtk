<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/boss_bg"
    tools:context=".withdraw">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:background="@drawable/grad_button">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:src="@drawable/back"
                    app:tint="@color/md_white_1000" />


                <com.playboss.satkamatka.latobold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="Withdraw Coins"
                    android:textColor="@color/md_white_1000"
                    android:textSize="14sp" />


            </LinearLayout>


        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">


                <EditText

                    android:id="@+id/amount"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="20dp"
                    android:hint="Enter Amount"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:maxLength="10"
                    android:drawableTint="@color/black"
                    app:drawableEndCompat="@drawable/ic_baseline_monetization_on_24"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:inputType="phone"
                    android:layout_marginRight="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/rectangle_3_shape"
                    android:textColor="@color/black"
                    android:textColorHint="#93000000"
                    android:backgroundTint="@color/md_white_1000"
                    android:textSize="12sp" />


               <Spinner
                   android:id="@+id/mode"
                   android:layout_width="match_parent"
                   android:layout_height="36dp"
                   android:layout_marginTop="20dp"
                   android:paddingLeft="20dp"
                   android:paddingTop="10dp"
                   android:maxLength="10"
                   android:paddingRight="10dp"
                   android:layout_marginLeft="10dp"
                   android:inputType="phone"
                   android:layout_marginRight="10dp"
                   android:paddingBottom="10dp"
                   android:background="@drawable/rectangle_3_shape"
                   android:textColor="@color/black"
                   android:backgroundTint="@color/md_white_1000"
                   android:textSize="12sp" >

               </Spinner>


                <EditText

                    android:id="@+id/paytm"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="20dp"
                    android:hint="Enter Paytm Number"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:maxLength="10"

                    android:paddingRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:inputType="phone"
                    android:layout_marginRight="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/rectangle_3_shape"
                    android:textColor="@color/black"
                    android:textColorHint="#93000000"
                    android:backgroundTint="@color/md_white_1000"
                    android:textSize="12sp" />



                <EditText
                    android:visibility="gone"
                    android:id="@+id/phonepe"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="20dp"
                    android:hint="Enter Phonepay Number"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:maxLength="10"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:inputType="phone"
                    android:layout_marginRight="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/rectangle_3_shape"
                    android:textColor="@color/black"
                    android:textColorHint="#93000000"
                    android:backgroundTint="@color/md_white_1000"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/bank_details"
                    android:visibility="gone"
                    android:orientation="vertical"

                    android:layout_height="wrap_content">



                    <EditText

                        android:id="@+id/ac"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="20dp"
                        android:hint="A/C number"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:maxLength="10"

                        android:paddingRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:inputType="phone"
                        android:layout_marginRight="10dp"
                        android:paddingBottom="10dp"
                        android:background="@drawable/rectangle_3_shape"
                        android:textColor="@color/black"
                        android:textColorHint="#93000000"
                        android:backgroundTint="@color/md_white_1000"
                        android:textSize="12sp" />



                    <EditText

                        android:id="@+id/ifsc"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="20dp"
                        android:hint="IFSC"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:maxLength="10"

                        android:paddingRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:inputType="phone"
                        android:layout_marginRight="10dp"
                        android:paddingBottom="10dp"
                        android:background="@drawable/rectangle_3_shape"
                        android:textColor="@color/black"
                        android:textColorHint="#93000000"
                        android:backgroundTint="@color/md_white_1000"
                        android:textSize="12sp" />


                    <EditText

                        android:id="@+id/holder"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="20dp"
                        android:hint="A/C Holder name"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:maxLength="10"

                        android:paddingRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:inputType="phone"
                        android:layout_marginRight="10dp"
                        android:paddingBottom="10dp"
                        android:background="@drawable/rectangle_3_shape"
                        android:textColor="@color/black"
                        android:textColorHint="#93000000"
                        android:backgroundTint="@color/md_white_1000"
                        android:textSize="12sp" />

                </LinearLayout>

                <com.playboss.satkamatka.latobold
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#730800"
                    android:gravity="center_horizontal"
                    android:paddingLeft="30dp"
                    android:paddingTop="10dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="10dp"
                    android:text="WITHDRAW"
                    android:textColor="@color/md_white_1000"
                    android:textSize="12sp" />




            </LinearLayout>

        </ScrollView>



    </RelativeLayout>

    <LinearLayout
        android:id="@+id/whatsapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_btn"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/whatsapp" />

        <com.playboss.satkamatka.latobold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="Direct Withdraw"
            android:textColor="@color/font"
            android:textSize="16sp" />


    </LinearLayout>



</RelativeLayout>