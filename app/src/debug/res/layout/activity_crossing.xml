<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/boss_bg"
    tools:context=".crossing">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:id="@+id/scrollView"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar"
                android:backgroundTint="@color/black"
                android:background="@color/background"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:backgroundTint="@color/black"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:id="@+id/back"
                        android:layout_margin="15dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="@color/black"
                        android:layout_height="wrap_content"
                        >

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            app:tint="@color/md_white_1000"
                            android:src="@drawable/back"
                            android:layout_margin="10dp"
                            />

                    </androidx.cardview.widget.CardView>


                    <com.playboss.satkamatka.latobold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/md_white_1000"
                        android:layout_centerHorizontal="true"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="Crossing Bet"
                        />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_below="@id/toolbar"
                android:background="@drawable/boss_bg"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            >

                            <com.playboss.satkamatka.latobold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Enter Number"
                                android:layout_marginTop="20dp"
                                android:textColor="@color/black"
                                android:layout_marginLeft="20dp"
                                android:textSize="16sp"
                                />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/number"
                                android:background="@drawable/rectangle_8_shape"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:inputType="number"
                                android:maxLength="10"
                                android:textSize="13sp"
                                />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            >

                            <com.playboss.satkamatka.latobold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Enter Coins"
                                android:layout_marginTop="20dp"
                                android:textColor="@color/font"
                                android:layout_marginLeft="20dp"
                                android:textSize="16sp"
                                />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/amount"
                                android:background="@drawable/rectangle_8_shape"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:inputType="number"
                                android:maxLength="3"
                                android:textSize="13sp"
                                />


                        </LinearLayout>


                    </LinearLayout>





                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:paddingStart="20dp"
                        android:gravity="end"
                        android:layout_marginEnd="20dp"
                        android:paddingEnd="10dp"
                        android:layout_height="0dp">

                        <com.playboss.satkamatka.latonormal
                            android:layout_width="wrap_content"
                            android:textColor="@color/font"
                            android:textSize="20sp"
                            android:layout_marginTop="10dp"

                            android:layout_marginRight="5dp"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center_vertical"
                            android:text="Total"
                            />

                        <EditText
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/rectangle_8_shape"
                            android:layout_marginTop="20dp"
                            android:focusable="false"
                            android:hint=""
                            android:id="@+id/totalamount"
                            android:inputType="number"
                            android:textSize="13sp"
                            />


                    </LinearLayout>

                    <com.playboss.satkamatka.latobold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:background="@drawable/button"
                        android:backgroundTint="#730800"
                        android:id="@+id/submit"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="60dp"
                        android:textColor="#fff"
                        android:layout_marginBottom="20dp"

                        android:gravity="center_horizontal"
                        android:layout_marginTop="28sp"
                        />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/recyclerview"
                        android:nestedScrollingEnabled="true"
                        />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>