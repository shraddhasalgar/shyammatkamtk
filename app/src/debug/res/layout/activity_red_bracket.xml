<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/boss_bg"
    tools:context=".RedBracket">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:id="@+id/scrollView"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar"
                android:background="@drawable/grad_button"
                android:backgroundTint="@color/black"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/back"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:padding="9dp"
                            android:src="@drawable/back"
                            app:tint="@color/md_white_1000" />


                        <com.playboss.satkamatka.latobold
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="Place bet"
                            android:textColor="@color/md_white_1000"
                            android:textSize="14sp" />


                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/wallet_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/wallet_out"
                        android:padding="8dp">

                        <com.playboss.satkamatka.latobold
                            android:id="@+id/balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/accent"
                            android:visibility="gone"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/coin"
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/wallet_icon" />

                    </LinearLayout>

                </RelativeLayout>



            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"

                    android:padding="3dp">

                    <com.playboss.satkamatka.latobold
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:id="@+id/date"
                        android:visibility="gone"
                        android:background="#730800"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="DEC, 12 2021"
                        android:textColor="@color/white"
                         android:textSize="14sp"

                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/type_container"
                        android:visibility="gone"
                        android:layout_weight="6"
                        android:background="#730800"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <com.playboss.satkamatka.latobold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/open_game"
                            android:background="@color/green"
                            android:textColor="@color/md_black_1000"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="OPEN"
                            />

                        <com.playboss.satkamatka.latobold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:id="@+id/close_game"
                            android:background="@color/white"
                            android:gravity="center"
                            android:textColor="@color/font"
                            android:padding="10dp"
                            android:text="CLOSE"

                            />

                    </LinearLayout>


                </LinearLayout>


                <Spinner
                    android:id="@+id/type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/edittext"
                    android:padding="5dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:backgroundTint="#A19C27B0"
                        android:padding="3dp">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:background="#730800"
                            android:padding="10dp">

                            <com.playboss.satkamatka.latobold
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:padding="10dp"
                                android:background="@color/green"
                                android:text="Half Red Bracket"
                                android:id="@+id/odd"
                                android:layout_marginRight="5dp"
                                />

                            <com.playboss.satkamatka.latobold
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:id="@+id/even"
                                android:background="@color/white"
                                android:gravity="center"
                                android:textColor="@color/font"
                                android:padding="10dp"
                                android:text="Full Red Bracket"

                                />

                        </LinearLayout>


                    </LinearLayout>





                    <com.playboss.satkamatka.latobold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:text="Bid Digits"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"

                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/full_bracket"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:padding="5dp">

                                    <RelativeLayout
                                        android:layout_width="50dp"
                                        android:layout_height="50dp">


                                        <com.playboss.satkamatka.latobold
                                            android:id="@+id/full00"
                                            android:layout_width="50dp"
                                            android:layout_height="match_parent"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/shadow"
                                            android:gravity="center"
                                            android:text="00"
                                            android:textColor="@color/font"
                                            android:textSize="12sp" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_marginLeft="10dp">


                                        <com.playboss.satkamatka.latobold
                                            android:id="@+id/full11"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/shadow"
                                            android:gravity="center"
                                            android:text="11"
                                            android:textColor="@color/font"
                                            android:textSize="12sp" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_marginLeft="10dp">


                                        <com.playboss.satkamatka.latobold
                                            android:id="@+id/full22"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/shadow"
                                            android:gravity="center"
                                            android:text="22"
                                            android:textColor="@color/font"
                                            android:textSize="12sp" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_marginLeft="10dp">


                                        <com.playboss.satkamatka.latobold
                                            android:id="@+id/full33"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"

                                            android:layout_centerInParent="true"
                                            android:background="@drawable/shadow"
                                            android:gravity="center"
                                            android:text="33"
                                            android:textColor="@color/font"
                                            android:textSize="12sp" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_marginLeft="10dp">


                                        <com.playboss.satkamatka.latobold
                                            android:id="@+id/full44"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/shadow"
                                            android:gravity="center"
                                            android:text="44"
                                            android:textColor="@color/font"
                                            android:textSize="12sp" />

                                    </RelativeLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:padding="5dp">

                                    <RelativeLayout
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        >


                                        <com.playboss.satkamatka.latobold
                                            android:id="@+id/full55"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/shadow"
                                            android:gravity="center"
                                            android:text="55"
                                            android:textColor="@color/font"
                                            android:textSize="12sp" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_marginLeft="10dp">


                                        <com.playboss.satkamatka.latobold
                                            android:id="@+id/full66"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/shadow"
                                            android:gravity="center"
                                            android:text="66"
                                            android:textColor="@color/font"
                                            android:textSize="12sp" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_marginLeft="10dp">


                                        <com.playboss.satkamatka.latobold
                                            android:id="@+id/full77"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentBottom="true"
                                            android:layout_marginEnd="0dp"
                                            android:layout_marginBottom="0dp"
                                            android:background="@drawable/shadow"
                                            android:gravity="center"
                                            android:text="77"
                                            android:textColor="@color/font"
                                            android:textSize="12sp" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_marginLeft="10dp">


                                        <com.playboss.satkamatka.latobold
                                            android:id="@+id/full88"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/shadow"
                                            android:gravity="center"
                                            android:text="88"
                                            android:textColor="@color/font"
                                            android:textSize="12sp" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_marginLeft="10dp">


                                        <com.playboss.satkamatka.latobold
                                            android:id="@+id/full99"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/shadow"
                                            android:gravity="center"
                                            android:text="99"
                                            android:textColor="@color/font"
                                            android:textSize="12sp" />

                                    </RelativeLayout>


                                </LinearLayout>



                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/half_bracket"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:padding="5dp">

                                    <RelativeLayout
                                        android:layout_width="50dp"
                                        android:layout_height="50dp">


                                        <com.playboss.satkamatka.latobold
                                            android:id="@+id/half05"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/shadow"
                                            android:gravity="center"
                                            android:text="05"
                                            android:textColor="@color/font"
                                            android:textSize="12sp" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_marginLeft="10dp">


                                        <com.playboss.satkamatka.latobold
                                            android:id="@+id/half16"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/shadow"
                                            android:gravity="center"
                                            android:text="16"
                                            android:textColor="@color/font"
                                            android:textSize="12sp" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_marginLeft="10dp">


                                        <com.playboss.satkamatka.latobold
                                            android:id="@+id/half27"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/shadow"
                                            android:gravity="center"
                                            android:text="27"
                                            android:textColor="@color/font"
                                            android:textSize="12sp" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"

                                        android:layout_marginLeft="10dp">


                                        <com.playboss.satkamatka.latobold
                                            android:id="@+id/half38"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"

                                            android:layout_centerInParent="true"
                                            android:background="@drawable/shadow"
                                            android:gravity="center"
                                            android:text="38"
                                            android:textColor="@color/font"
                                            android:textSize="12sp" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_marginLeft="10dp">


                                        <com.playboss.satkamatka.latobold
                                            android:id="@+id/half49"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/shadow"
                                            android:gravity="center"
                                            android:text="49"
                                            android:textColor="@color/font"
                                            android:textSize="12sp" />

                                    </RelativeLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:padding="5dp">

                                    <RelativeLayout
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        >


                                        <com.playboss.satkamatka.latobold
                                            android:id="@+id/half50"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/shadow"
                                            android:gravity="center"
                                            android:text="50"
                                            android:textColor="@color/font"
                                            android:textSize="12sp" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_marginLeft="10dp">


                                        <com.playboss.satkamatka.latobold
                                            android:id="@+id/half61"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/shadow"
                                            android:gravity="center"
                                            android:text="61"
                                            android:textColor="@color/font"
                                            android:textSize="12sp" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_marginLeft="10dp">


                                        <com.playboss.satkamatka.latobold
                                            android:id="@+id/half72"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentBottom="true"
                                            android:layout_marginBottom="0dp"
                                            android:background="@drawable/shadow"
                                            android:gravity="center"
                                            android:text="72"
                                            android:textColor="@color/font"
                                            android:textSize="12sp" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_marginLeft="10dp">


                                        <com.playboss.satkamatka.latobold
                                            android:id="@+id/half83"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/shadow"
                                            android:gravity="center"
                                            android:text="83"
                                            android:textColor="@color/font"
                                            android:textSize="12sp" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_marginLeft="10dp">


                                        <com.playboss.satkamatka.latobold
                                            android:id="@+id/half94"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/shadow"
                                            android:gravity="center"
                                            android:text="94"
                                            android:textColor="@color/font"
                                            android:textSize="12sp" />

                                    </RelativeLayout>


                                </LinearLayout>


                            </LinearLayout>


                        </RelativeLayout>

                    </HorizontalScrollView>

                    <com.playboss.satkamatka.latobold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:text="Bid Points"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/edittext2"
                        android:hint="Enter Amount"
                        android:inputType="number"
                        android:textColor="@color/md_black_1000"
                        android:textColorHint="@color/md_black_1000"
                        android:textSize="13sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:visibility="gone"
                        android:padding="5dp">

                        <Button
                            android:id="@+id/button10"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/homeb"
                            android:backgroundTint="#E91E63"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:layout_marginLeft="20dp"
                            android:text="10"
                            android:textColor="@android:color/background_light"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Button
                            android:id="@+id/button50"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/homeb"
                            android:backgroundTint="#E91E63"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="50"
                            android:textColor="@android:color/background_light"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toBottomOf="parent"
