<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/boss_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.playboss.satkamatka.eczarbold
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:layout_marginTop="25dp"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:text="Sign In"
            android:textColor="@color/md_black_1000"
            android:textSize="25sp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
          >

            <LinearLayout

                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                >

            <ImageView
                android:id="@+id/draw"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/madhur_milan" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="25dp"
                android:gravity="center"
                android:background="@drawable/rectanglebg"
                android:orientation="vertical"
                android:padding="15dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/original_surfer"
                    android:text="Enter Pin"
                    android:textColor="@color/white"
                    android:textSize="20sp" />


                <EditText
                    android:id="@+id/pinCode"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rectangle_3_shape"
                    android:backgroundTint="#37FFFFFF"
                    android:drawableTint="@color/black"
                    android:gravity="center"
                    android:hint="Enter Pin"
                    android:maxLength="4"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="15sp"
                    app:drawableEndCompat="@drawable/ic_baseline_person_pin_24"
                    tools:ignore="TouchTargetSizeCheck" />

                <com.playboss.satkamatka.latobold
                    android:id="@+id/submit1"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#730800"
                    android:gravity="center_horizontal"
                    android:paddingLeft="30dp"
                    android:paddingTop="10dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="10dp"
                    android:text="LOGIN"
                    android:textColor="@color/md_white_1000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/resetpin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RESET PIN"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="12sp"/>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>